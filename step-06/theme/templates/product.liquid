<article>
    <h1>{{ product.title }}</h1>
    <img src="{{ product.featured_image | image_url: width: 500 }}" alt="{{ product.title }}" loading="lazy" width="{{ product.width }}" height="{{ product.height }}">    
    <p>{{ product.price | money }}</p>
    <p>{{ product.description }}</p>
    {% form 'product', product %}
    <select name="id">
        {% for variant in product.variants %}
            <option value="{{ variant.id }}">{{ variant.title }}</option>
        {% endfor %}
    </select>

    <button type="submit">Add to cart</button>
{% endform %}
</article>